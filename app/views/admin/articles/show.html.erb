<h1><%= link_to "Home", :controller => 'main', :action => 'index' %> >> <%= link_to "Articles", admin_articles_path %> >> <%= @article.title %></h2>

<div id="article_options">
	<h5>Article Options</h5>
<ul>
<li><%= button_to "View this article on the main site", @article, :confirm => "You are about to leave the admin site. To return, add the word admin after the first slash in the url (after the .org). Ex: #{url_for(:controller => 'main', :action => 'index', :only_path => false)}[insert 'admin' here]", :method => :get %></li>
<li><%= button_to "Edit this article's content", edit_admin_article_path(@article), :method => :get %></li>
<li><%= button_to "Delete this article", admin_article_path(@article), :method => :delete, :confirm => "Are you certain you want to delete this article? All of its associated comments will be deleted as well." %></li>
</ul>

</div>
<p />

<p><h2>Article title: <%= @article.title %></h2></p>

<p><h5>Article Summary: <%= @article.summary %></h5></p>

<p><h5>Article Preview</h5></p>
<p><%= auto_link(simple_format(@article.body)) %></p>
